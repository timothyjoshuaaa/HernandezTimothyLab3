<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name ="textview1">
        <item name="android:layout_width">385dp</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:text">Styles and Material Design</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name ="imageview1">
        <item name="android:id">@+id/imageView</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">285dp</item>

    </style>
    <style name="textview2">
        <item name="android:id">@+id/textView2</item>
        <item name="android:layout_width">235dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Chinese Cemetery</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="textview3">
        <item name="android:id">@+id/textView3</item>
        <item name="android:layout_width">258dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:text">Location: Santa Cruz, Manila, Metro Manila</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="textview4">
        <item name="android:id">@+id/textView4</item>
        <item name="android:layout_width">258dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:text">Distance from UST: 3.0km</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>

    </style>
    <style name="button1">
        <item name="android:id">@+id/button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">BACK</item>

    </style>
    <style name="button2">
        <item name="android:id">@+id/button2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">NEXT</item>

    </style>
</resources>
